// Linear Embedding
digraph {
	input [label="Input Signal
(batch_size, signal_length, input_channels)" shape=box]
	linear [label="Linear Transformation
(input_channels, output_channels)" shape=box]
	layernorm [label="Layer Normalization
(batch_size, signal_length, output_channels)" shape=box]
	gelu [label="GELU Activation
(batch_size, signal_length, output_channels)" shape=box]
	cls_token [label="CLS Token
(1, output_channels)" shape=box]
	output [label="Embedded Signal
(batch_size, signal_length+1, output_channels)" shape=box]
	input -> linear
	linear -> layernorm
	layernorm -> gelu
	gelu -> cls_token [label=Concatenate]
	cls_token -> output
}
